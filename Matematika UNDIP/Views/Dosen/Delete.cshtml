@model Dosen

<h2>DELETE</h2>

<h3 class="text-danger">Are you sure you want to delete this data?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">ID Dosen</dt>
        <dd class="col-sm-10">@Model.DosenID</dd>

        <dt class="col-sm-2">Nama</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">NIP</dt>
        <dd class="col-sm-10">@Model.NIP</dd>

        <dt class="col-sm-2">Telephone</dt>
        <dd class="col-sm-10">@Model.Telephone</dd>

        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.Gender</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Active</dt>
        <dd class="col-sm-10">@(Model.Active ? "Yes" : "No")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DosenID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>