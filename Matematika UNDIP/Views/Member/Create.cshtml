@model Matematika_UNDIP.Models.Member

@{
    ViewBag.Title = "Tambah Anggota";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Tambah Anggota Baru</h4>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.NIM, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.NIM, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.NIM, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Kembali
                    </a>
                </div>
            }
        </div>
    </div>
</div>